<p id="notice"><%= notice %></p>

<h1>Outfits</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Stylist</th>
      <th>Shoes</th>
      <th>Trousers</th>
      <th>Shirt</th>
      <th>Checked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outfits.each do |outfit| %>
      <tr>
        <td><%= outfit.user_id %></td>
        <td><%= outfit.stylist_id %></td>
        <td><%= outfit.shoes_id %></td>
        <td><%= outfit.trousers_id %></td>
        <td><%= outfit.shirt_id %></td>
        <td><%= outfit.checked %></td>
        <td><%= link_to 'Show', outfit %></td>
        <td><%= link_to 'Edit', edit_outfit_path(outfit) %></td>
        <td><%= link_to 'Destroy', outfit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Outfit', new_outfit_path %>
