<p id="notice"><%= notice %></p>

<h1>Trousers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trousers.each do |trouser| %>
      <tr>
        <td><%= trouser.user_id %></td>
        <td><%= trouser.picture %></td>
        <td><%= link_to 'Show', trouser %></td>
        <td><%= link_to 'Edit', edit_trouser_path(trouser) %></td>
        <td><%= link_to 'Destroy', trouser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

